int add(const int* p1, const int* p2)
{
	return *p1 - *p2;
}
int add(const char* p1, const char* p2)
{
	return *p1 - *p2;
}
int n = 0;//元素个数
void my_int()
{
	int i = 0;
	char nn = 0;
	int str[100] = { 0 };
	printf("请输入要排序的元素 个数\n");
		scanf("%d", &n);
		for (i = 0; i < n; i++)
		{
			scanf("%d", &str[i]);
	    }
		qsort(str, n, sizeof(int), add);
		for (i = 0; i < n; i++)
		{
			printf("%d ", str[i]);
		}
		printf("\n");
		while (getchar() != '\n');
}
int main()
{
	int i = 0;
	do
	{
		printf("*********  斌斌排序    *********\n");
		printf("********* 1:整形排序   *********\n");
		printf("********* 2:字符排序   *********\n");
		printf("********* 0 : 退出     *********\n");
		printf("请输入 1 或 2\n");
		scanf("%d", &i);
		switch (i)
		{
			case 1:
				my_int();
				break;
			case 2:
				//my_char;
				break;
			case 0:
				printf("已退出\n");
		}
	} while (i);
	
}

